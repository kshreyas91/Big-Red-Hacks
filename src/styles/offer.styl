@import 'nib'
@import './font-awesome.css'

*
  box-sizing border-box

body
  background-image url('/assets/bg_grey.png')
  font-size 16px
  font-family Lato, sans-serif
  min-width 1000px
  color rgb(60,60,60)

.fa
  margin-right 10px

a
  text-decoration none
  outline 0
  color rgb(60,60,60)

.left-branches
  position fixed
  width 25%
  height 100%
  background linear-gradient(#666666,#566B8A)
  font-size 18px
  letter-spacing 2px
  .top-logo
    padding-left 20px
    height 130px
    display -webkit-box
    -webkit-box-align center
    text-shadow 0 1px rgba(0,0,0,.15)
    color #fff
    font-size 22px
    font-weight 300
    letter-spacing 3px
  .branch, .branch-current
    width 100%
    height 100px
    padding-left 20px
    transition all 0.3s ease
    display -webkit-box
    -webkit-box-align center
  .branch
    color #fff
    &:hover
      background #5FE1B3
  .branch-current
    background #5FE1B3
  .btn-add
    bottom 0

.btn-add
  font-size 25px
  text-align center
  position absolute
  width 100%
  height 70px
  padding-top 20px
  background #FF6B7C
  color #fff
  transition all 0.3s ease
  &:hover
    background #E94457

.greetings
  position absolute
  margin-left 33%
  margin-top 3%
  width 60%
  color #999999
  letter-spacing 1px
  font-size 22px
  font-style italic
  
.right-offers
  position absolute
  margin-left 33%
  margin-top 8%
  width 60%
  background #d8d8d8
  font-weight 300
  color #999999
  .btn-add
    top 0
  .offers
    margin-top 70px
    margin-left 1px
    margin-right 1px
    .name
      font-size 20px
      font-weight 400
  .offer, .offer-current
    width 100%
    height 170px
    padding-left 20px
    transition all 0.2s ease
    padding-top 35px
    margin-bottom 1px
    background-repeat no-repeat
    background-position 100%
  .offer
    .name
      margin-bottom 10px
    .desc 
      margin-bottom 20px
    .limit
      background-color #FFDBB4
      font-size 12px
      font-weight 400
      color #fff
      width 60px
      text-align center
      border-radius 15px
      padding 5px 5px 5px 5px
      transition all 0.3s ease
    .fa-quote-right
      margin-left 10px
    &:hover
      background-color #fff
      color #666666
      .limit
        background-color #FFB462
  .offer-current
    background-color #fff
    color: #666666
    .limit
      background-color #FFB462
  .modal
    display none
    background rgba(#000, .5)
    fixed top left
    size 100%
    z-index 1000
    form
      width 600px
      padding-top 60px
      padding-bottom 40px
      padding-left 60px
      background-color #fff
      border-radius 5px
      absolute top 50% left 50%
      transform translate(-50%, -50%)
      input
        display block
        background #fff
        border 1px solid #eeeeee
        height 40px
        width 450px
        margin-bottom 20px
        font-size 20px
        padding-left 10px
        padding-right 10px
        &:focus
          outline none
      .add
        background #FFB462
        color #fff
        letter-spacing 1.5px
        font-size 18px
        border-bottom 3px solid #F6A173
